<style>
table {
      font-family: arial, sans-serif;

      width: 90%;
      margin-left: auto;
      margin-right: auto;
      border-collapse: collapse;
    }

    td,
    th {
      border: 1px solid #9e8888;
      text-align: left;
      padding: 8px;


    }

    tr:nth-of-type(1) {
      color: #fff;
      background: linear-gradient(-135deg, #808080, #000000);
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }

    tr:nth-child(odd) {
      background-color: #B2B1B9;
    }

    h2 {
      text-align: center;
      color: #fff;
      background: linear-gradient(-135deg, #808080, #000000);
      height: 50px;
      font-size: 35px;
      width: 35%;
      margin-left: 33%;
      padding-top: 5px;
      padding-bottom: 5px;
      justify-content: center;
      top: 0;
      left: 0;
      right: 0;
    }

    body {
